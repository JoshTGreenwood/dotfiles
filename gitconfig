[core]
  excludesfile = /Users/Josh/.gitignore
  editor = vim -c 'startinsert'
[user]
  email = joshua.t.greenwood@gmail.com
  name = Josh Greenwood
[branch]
  autosetuprebase = always
[rerere]
  enabled = true
[alias]
  st = status -s
  aa = add --all
  cv = commit -v
  ca = commit --amend
  fix = commit --fixup
  co = checkout
  fpush = push --force-with-lease

  # diffing
  d = "!f() { git diff --color $* | diff-so-fancy | less --tabs=4 -RFX; }; f"
  dc = !git d --cached

  # logging
  l = "!. ~/.githelpers.sh && pretty_git_log"
  r = !git l -n 30

  # list all the recent branches I've worked on
  recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
[diff]
	compactionHeuristic = true
[github]
	user = joshtgreenwood
[ghi]
	token = !security find-internet-password -a joshtgreenwood -s github.com -l 'ghi token' -w
[rebase]
	autosquash = true
